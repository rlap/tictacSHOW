<h1>User login</h1>

<div class="well">
  <%= form_tag sessions_path, method: :post, html: {class: "form-horizontal"} do %>
    <div class="form-group">
      <%= label_tag :email, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= text_field_tag :password, nil, class: "form-control" %>
      </div>
    </div>

    <div class="btn btn-primary">
      <%= submit_tag %>
    </div>
  <% end %>
</div>

