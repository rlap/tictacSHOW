<h1><%= game_finish_message(@game) %></h1>

<%= button_to "Play again", new_game_path, class:"btn btn-default btn-lg btn-block", method: :get %>

<%= button_to "View leaderboard", leaderboard_path, class:"btn btn-default btn-lg btn-block", method: :get %>

<%= button_to "Logout", session_path(session), class:"btn btn-default btn-lg btn-block", method: :delete, confirm: "Are you sure?" %>