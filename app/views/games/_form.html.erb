<h1>New game</h1>

<div class="well">
  <%= form_for(@game, html: {class: "form-horizontal"}) do |f| %>
    <% if @game.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

        <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :player2_id, "Play against:", class: "col-lg-2 control-label" %><br />
      <div class="col-lg-10">
        <%= f.select :player2_id , options_from_collection_for_select(User.all, :id, :screen_name), class: "col-lg-2 control-label"%>
      </div>
    </div>
    <div class="btn btn-primary">
      <%= f.submit %>
    </div>
  <% end %>
</div>
