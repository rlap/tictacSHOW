<h1>New game</h1>

<div class="well">
  <%= form_for(@game, html: {class: "form-horizontal"}) do |f| %>
    <% if @game.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

        <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :player2_id, "Play against:", class: "col-lg-2 control-label" %><br />
      <div class="col-lg-10">
        <%= f.select :player2_id , options_from_collection_for_select(User.all_except_current_user(current_user), :id, :screen_name,nil),include_blank: true, class: "col-lg-2 control-label"%>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :new_player_email, "Or Enter an Email:", class: "col-lg-2 control-label" %><br />
      <div class="col-lg-10">
        <%= email_field_tag :new_player_email, nil, class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :player1_img_good, 'Flattering photo', class: "col-lg-2 control-label" %><br />
    </div>
        <%= f.file_field :player1_img_good %>
 
    <div class="form-group">
      <%= f.label :player1_img_bad, 'Embarassing photo', class: "col-lg-2 control-label" %><br />
    </div>
        <%= f.file_field :player1_img_bad %>

    <div class="btn btn-primary">
      <%= f.submit %>
    </div>
  <% end %>
</div>
